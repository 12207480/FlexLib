<?xml version="1.0" encoding="utf-8"?>
<UIView
    layout="top:20,
    flex:1,
    alignItems:center"
    attr="bgColor:white">
    <FlexScrollView name="scroll"  layout="padding:50,flex:1,width:100%" attr="bgColor:#999999,vertScroll:true">
        <UIView layout="height:300,width:100%" attr="bgColor:red"/>
        <UIView layout="height:300,width:100%" attr="bgColor:green"/>
        <UIView layout="height:300,width:100%" attr="bgColor:blue"/>
    </FlexScrollView>
    
    <UIView name="close" onPress="tapCloseAction" layout="position:absolute,width:100%,height:50,bottom:0,alignItems:center">
        <UIView layout="height:1,width:100%" attr="bgColor:#f0f0f0"/>
        <UILabel layout="flex:0" attr="fontSize:16,color:#666666,text:关闭"/>
    </UIView>
</UIView> 
